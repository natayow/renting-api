generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum PropertyStatus {
  DRAFT
  ACTIVE
  INACTIVE
}

enum BookingStatus {
  WAITING_PAYMENT
  WAITING_CONFIRMATION
  CONFIRMED
  CANCELED
  EXPIRED
  CHECKED_IN
  CHECKED_OUT
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
  REFUNDED
}

model User {
  id          String  @id @default(uuid()) @db.Uuid
  role        Role    @default(USER)
  fullName    String  @db.VarChar(80)
  email       String  @unique @db.VarChar(120)
  password    String  @db.VarChar(255)
  phoneNumber String? @db.VarChar(20)

  createdAt DateTime  @default(now())
  updatedAt DateTime?
  deletedAt DateTime?

  adminProfile      AdminProfile?
  propertiesAsAdmin Property[]    @relation("AdminProperties")
  bookings          Booking[]
  payments          Payment[]
  properties        Property[]    @relation("UserProperties")

  @@index([role])
}

model AdminProfile {
  id          String  @id @default(uuid()) @db.Uuid
  userId      String  @unique @db.Uuid
  displayName String  @db.VarChar(100)
  description String?

  bankName        String? @db.VarChar(80)
  bankAccountNo   String? @db.VarChar(60)
  bankAccountName String? @db.VarChar(80)

  createdAt DateTime  @default(now())
  updatedAt DateTime?
  deletedAt DateTime?

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
}

model PropertyType {
  id        String    @id @default(uuid()) @db.Uuid
  name      String    @unique @db.VarChar(60)
  createdAt DateTime  @default(now())
  updatedAt DateTime?
  deletedAt DateTime?

  properties Property[]
}

model Location {
  id      String @id @default(uuid()) @db.Uuid
  country String @db.VarChar(80)
  city    String @db.VarChar(80)
  address String @db.VarChar(255)

  createdAt DateTime  @default(now())
  updatedAt DateTime?
  deletedAt DateTime?

  properties Property[]

  @@index([country, city])
}

model Facility {
  id   String  @id @default(uuid()) @db.Uuid
  name String  @unique @db.VarChar(100)
  icon String? @db.VarChar(120)

  createdAt DateTime  @default(now())
  updatedAt DateTime?
  deletedAt DateTime?

  propertyFacilities PropertyFacility[]
  roomFacilities     RoomFacility[]
}

model PropertyFacility {
  id         String @id @default(uuid()) @db.Uuid
  propertyId String @db.Uuid
  facilityId String @db.Uuid

  property Property @relation(fields: [propertyId], references: [id])
  facility Facility @relation(fields: [facilityId], references: [id])

  createdAt DateTime @default(now())

  @@unique([propertyId, facilityId])
  @@index([facilityId])
}

model RoomFacility {
  id         String @id @default(uuid()) @db.Uuid
  roomId     String @db.Uuid
  facilityId String @db.Uuid

  room     Room     @relation(fields: [roomId], references: [id])
  facility Facility @relation(fields: [facilityId], references: [id])

  createdAt DateTime @default(now())

  @@unique([roomId, facilityId])
  @@index([facilityId])
}

model Property {
  id          String  @id @default(uuid()) @db.Uuid
  adminUserId String  @db.Uuid
  title       String  @db.VarChar(150)
  description String?
  typeId      String? @db.Uuid
  locationId  String  @db.Uuid

  status PropertyStatus @default(DRAFT)

  createdAt DateTime  @default(now())
  updatedAt DateTime?
  deletedAt DateTime?

  adminUser     User                   @relation("AdminProperties", fields: [adminUserId], references: [id])
  type          PropertyType?          @relation(fields: [typeId], references: [id])
  location      Location               @relation(fields: [locationId], references: [id])
  images        PropertyImage[]
  specialPrices PropertySpecialPrice[]
  calendars     PropertyCalendar[]
  bookings      Booking[]
  rooms         Room[]
  facilities    PropertyFacility[]
  user          User?                  @relation("UserProperties", fields: [userId], references: [id])
  userId        String?                @db.Uuid

  @@index([adminUserId])
  @@index([locationId])
  @@index([status])
}

model PropertyImage {
  id         String @id @default(uuid()) @db.Uuid
  propertyId String @db.Uuid
  url        String @db.VarChar(255)

  createdAt DateTime  @default(now())
  updatedAt DateTime?
  deletedAt DateTime?

  property Property @relation(fields: [propertyId], references: [id])

  @@index([propertyId])
}

model Room {
  id                   String  @id @default(uuid()) @db.Uuid
  propertyId           String  @db.Uuid
  name                 String  @db.VarChar(120)
  description          String?
  maxGuests            Int     @default(1)
  beds                 Int     @default(1)
  bathrooms            Int     @default(1)
  basePricePerNightIdr Int     @default(0)

  createdAt DateTime  @default(now())
  updatedAt DateTime?
  deletedAt DateTime?

  property        Property             @relation(fields: [propertyId], references: [id])
  facilities      RoomFacility[]
  bookings        Booking[]
  availability    RoomAvailability[]
  peakSeasonRates RoomPeakSeasonRate[]

  @@index([propertyId])
}

model RoomAvailability {
  id          String   @id @default(uuid()) @db.Uuid
  roomId      String   @db.Uuid
  date        DateTime
  isAvailable Boolean  @default(true)

  createdAt DateTime  @default(now())
  updatedAt DateTime?
  deletedAt DateTime?

  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@unique([roomId, date])
  @@index([roomId])
  @@index([date])
  @@index([isAvailable])
}

model RoomPeakSeasonRate {
  id              String   @id @default(uuid()) @db.Uuid
  roomId          String   @db.Uuid
  startDate       DateTime
  endDate         DateTime
  adjustmentType  String   @db.VarChar(20) // "FIXED" or "PERCENTAGE"
  adjustmentValue Int // Amount in IDR for FIXED, percentage value for PERCENTAGE
  note            String?  @db.VarChar(200)
  isActive        Boolean  @default(true)

  createdAt DateTime  @default(now())
  updatedAt DateTime?
  deletedAt DateTime?

  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([roomId])
  @@index([startDate, endDate])
  @@index([isActive])
}

model PropertySpecialPrice {
  id               String   @id @default(uuid()) @db.Uuid
  propertyId       String   @db.Uuid
  startDate        DateTime
  endDate          DateTime
  pricePerNightIdr Int      @default(0)
  note             String?  @db.VarChar(120)
  isActive         Boolean  @default(true)

  createdAt DateTime  @default(now())
  updatedAt DateTime?
  deletedAt DateTime?

  property Property @relation(fields: [propertyId], references: [id])

  @@index([propertyId])
  @@index([startDate, endDate])
  @@index([isActive])
}

model PropertyCalendar {
  id                       String   @id @default(uuid()) @db.Uuid
  propertyId               String   @db.Uuid
  date                     DateTime
  isAvailable              Boolean  @default(true)
  overridePricePerNightIdr Int      @default(0)
  minStayNightsOverride    Int?

  createdAt DateTime  @default(now())
  updatedAt DateTime?
  deletedAt DateTime?

  property Property @relation(fields: [propertyId], references: [id])

  @@unique([propertyId, date])
  @@index([isAvailable])
}

model Booking {
  id         String  @id @default(uuid()) @db.Uuid
  userId     String  @db.Uuid
  propertyId String  @db.Uuid
  roomId     String? @db.Uuid

  checkInDate  DateTime
  checkOutDate DateTime
  nights       Int      @default(1)
  guestsCount  Int      @default(1)

  status BookingStatus @default(WAITING_PAYMENT)

  nightlySubtotalIdr Int @default(0)
  cleaningFeeIdr     Int @default(0)
  serviceFeeIdr      Int @default(0)
  discountIdr        Int @default(0)
  totalPriceIdr      Int @default(0)

  createdAt    DateTime  @default(now())
  paymentDueAt DateTime?
  cancelledAt  DateTime?
  cancelReason String?   @db.VarChar(200)

  updatedAt DateTime?
  deletedAt DateTime?

  user     User     @relation(fields: [userId], references: [id])
  property Property @relation(fields: [propertyId], references: [id])
  room     Room?    @relation(fields: [roomId], references: [id])

  nightlyRates BookingNightlyRate[]
  payments     Payment[]
  emails       EmailNotification[]

  @@index([userId])
  @@index([propertyId])
  @@index([roomId])
  @@index([status])
  @@index([checkInDate])
  @@index([createdAt])
  @@index([paymentDueAt])
}

model BookingNightlyRate {
  id               String   @id @default(uuid()) @db.Uuid
  bookingId        String   @db.Uuid
  date             DateTime
  pricePerNightIdr Int      @default(0)

  booking Booking @relation(fields: [bookingId], references: [id])

  @@index([bookingId])
  @@index([date])
}

model Payment {
  id            String        @id @default(uuid()) @db.Uuid
  bookingId     String        @db.Uuid
  userId        String        @db.Uuid
  amountIdr     Int           @default(0)
  paymentStatus PaymentStatus @default(PENDING)
  paymentMethod String?       @db.VarChar(40)
  providerTxId  String?       @db.VarChar(80)
  proofFileUrl  String?       @db.VarChar(255)

  requestedAt DateTime  @default(now())
  paidAt      DateTime?
  failedAt    DateTime?
  refundedAt  DateTime?

  updatedAt DateTime?
  deletedAt DateTime?

  booking Booking @relation(fields: [bookingId], references: [id])
  user    User    @relation(fields: [userId], references: [id])

  @@index([bookingId])
  @@index([userId])
  @@index([paymentStatus])
  @@index([requestedAt])
}

model EmailNotification {
  id             String   @id @default(uuid()) @db.Uuid
  bookingId      String   @db.Uuid
  type           String   @db.VarChar(40)
  recipientEmail String   @db.VarChar(120)
  sentAt         DateTime @default(now())
  payloadJson    String?

  booking Booking @relation(fields: [bookingId], references: [id])

  @@index([bookingId])
  @@index([type])
  @@index([sentAt])
}
